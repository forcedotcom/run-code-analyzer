{
    "name": "run-code-analyzer",
    "description": "GitHub Action to run the Salesforce Code Analyzer",
    "version": "2.1.0",
    "author": "The Salesforce Code Analyzer Team",
    "private": true,
    "homepage": "https://github.com/forcedotcom/run-code-analyzer",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/forcedotcom/run-code-analyzer.git"
    },
    "bugs": {
        "url": "https://github.com/forcedotcom/run-code-analyzer/issues"
    },
    "keywords": [
        "actions",
        "salesforce code analyzer"
    ],
    "exports": {
        ".": "./dist/index.js"
    },
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "bundle": "npm run format:write && npm run package",
        "ci-test": "jest",
        "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
        "format:write": "prettier --write **/*.ts",
        "format:check": "prettier --check **/*.ts",
        "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
        "package": "ncc build src/index.ts --license licenses.txt --out dist",
        "package:watch": "npm run package -- --watch",
        "test": "jest",
        "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
    },
    "license": "BSD-3-Clause license",
    "jest": {
        "preset": "ts-jest",
        "verbose": true,
        "clearMocks": true,
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testMatch": [
            "**/*.test.ts"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/",
            "/dist_local/"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "./src/**"
        ]
    },
    "dependencies": {
        "@actions/artifact": "^2.2.1",
        "@actions/core": "^1.11.1",
        "@actions/exec": "^1.1.1",
        "semver": "^7.6.3"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.1",
        "@types/semver": "^7.5.8",
        "@typescript-eslint/eslint-plugin": "^8.23.0",
        "@typescript-eslint/parser": "^8.23.0",
        "@vercel/ncc": "^0.38.3",
        "eslint": "^8.57.1",
        "eslint-plugin-github": "^5.1.8",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-jsonc": "^2.19.1",
        "eslint-plugin-prettier": "^5.2.3",
        "jest": "^29.7.0",
        "make-coverage-badge": "^1.2.0",
        "prettier": "^3.5.0",
        "prettier-eslint": "^16.3.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.7.3"
    }
}
