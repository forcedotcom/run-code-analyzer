{
  "name": "run-code-analyzer",
  "description": "GitHub Action to run the Salesforce Code Analyzer",
  "version": "0.1.0",
  "author": "The Salesforce Code Analyzer Team",
  "private": true,
  "homepage": "https://github.com/forcedotcom/run-code-analyzer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forcedotcom/run-code-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/forcedotcom/run-code-analyzer/issues"
  },
  "keywords": [
    "actions",
    "salesforce code analyzer"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt --out dist",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "BSD-3-Clause license",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/artifact": "^2.0.0",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-jsonc": "^2.11.2",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.1.1",
    "prettier-eslint": "^16.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
